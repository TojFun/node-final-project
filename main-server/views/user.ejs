<!DOCTYPE html>
<html>
  <head>
    <title>Index</title>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
      defer
    ></script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body class="bg-dark">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul
              class="navbar-nav me-auto mb-2 mb-lg-0 justify-content-around"
              style="width: 100%; font-size: larger"
            >
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Menu</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/movies">Movies</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/subscriptions">Subscriptions</a>
              </li>

              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle active"
                  id="navbarDropdownMenuLink"
                  href="#"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  Users Management
                </a>

                <ul
                  class="dropdown-menu"
                  aria-labelledby="navbarDropdownMenuLink"
                >
                  <li>
                    <a class="dropdown-item active" href="/users">Users</a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="/users/add">Add User</a>
                  </li>
                </ul>
              </li>

              <li class="nav-item">
                <a
                  class="nav-link"
                  href="/logout"
                  onclick="confirm(`Are you sure you want to log out?`)"
                  >Logout</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <div class="container-fluid">
        <div class="text-light col-md-3">
          Hi, <strong> <%= name %> </strong>
        </div>
      </div>

      <div style="display: flex; justify-content: center">
        <h1>Movies - Subscriptions Web Site</h1>
      </div>
    </header>

    <main>
      <div class="container">
        <div class="row">
          <h2><%= title %></h2>
        </div>

        <div class="row users">
          <form action="/users/<%= user.id %>" method="POST" class="user">
            <div class="container">
              <div class="row firstName mb-1">
                <label class="col-xl-2 col-lg-3 col-md-4" for="firstName"
                  >First Name:
                </label>
                <input
                  type="text"
                  name="firstName"
                  id="firstName"
                  class="col-xl-10 col-lg-9 col-md-8"
                  value="<%= user.firstName %>"
                />
              </div>

              <div class="row lastName mb-1">
                <label class="col-xl-2 col-lg-3 col-md-4" for="lastName"
                  >Last Name:
                </label>
                <input
                  type="text"
                  name="lastName"
                  id="lastName"
                  class="col-xl-10 col-lg-9 col-md-8"
                  value="<%= user.lastName %>"
                />
              </div>

              <div class="row username mb-1">
                <label class="col-xl-2 col-lg-3 col-md-4" for="username"
                  >Username:
                </label>
                <input
                  type="text"
                  name="username"
                  id="username"
                  class="col-xl-10 col-lg-9 col-md-8"
                  value="<%= user.username %>"
                />
              </div>

              <div class="row sessionTimeOut mb-1">
                <label class="col-xl-4 col-lg-5 col-md-6" for="sessionTimeOut"
                  >Session Time Out (Minutes):
                </label>
                <input
                  type="number"
                  min="0"
                  name="sessionTimeOut"
                  id="sessionTimeOut"
                  class="col-xl-8 col-lg-7 col-md-6"
                  value="<%= user.sessionTimeOut %>"
                />
              </div>

              <div class="row creation-date mb-1">
                <label class="col-xl-2 col-lg-3 col-md-4" for="creation-date"
                  >Creation Date:</label
                >
                <span
                  id="creation-date"
                  class="font-monospace col-xl-10 col-lg-9 col-md-8"
                >
                  <big><%= user.creationDate %></big>
                </span>
              </div>

              <div class="row permissions mb-1">
                <label class="" for="permissions">Permissions: </label>

                <div class="permissions-checkboxes offset-1">
                  <% permissions.forEach(({ permission, on }) => { %>

                  <div class="permission">
                    <% if (on) { %>
                    <input
                      type="checkbox"
                      name="permissions"
                      id="<%=permission.toLowerCase().replace(/\s/g, '-' ) %>"
                      checked
                    />

                    <% } else { %>
                    <input
                      type="checkbox"
                      name="permissions"
                      id="<%=permission.toLowerCase().replace(/\s/g, '-' ) %>"
                    />
                    <% } %>

                    <label
                      for="<%= permission.toLowerCase().replace(/\s/g, '-') %>"
                    >
                      <%= permission %>
                    </label>
                  </div>
                  <% }) %>
                </div>
              </div>

              <div class="btns mb-1">
                <span>
                  <input class="btn btn-primary" type="submit" value="Update" />
                </span>

                <span>
                  <a class="btn btn-primary" href="/users"> Cancel </a>
                </span>
              </div>
            </div>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
