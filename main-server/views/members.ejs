<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Members</title>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
      defer
    ></script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <script src="/javascripts/delete.js" defer></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body class="bg-dark">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul
              class="navbar-nav me-auto mb-2 mb-lg-0 justify-content-around"
              style="width: 100%; font-size: larger"
            >
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Menu</a>
              </li>

              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  id="navbarDropdownMenuLink"
                  href="#"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  Movies
                </a>

                <ul
                  class="dropdown-menu"
                  aria-labelledby="navbarDropdownMenuLink"
                >
                  <li>
                    <a class="dropdown-item" href="/movies"> All Movies </a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="/movies/add">Add Movie</a>
                  </li>
                </ul>
              </li>

              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle active"
                  id="navbarDropdownMenuLink"
                  href="#"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  Subscriptions
                </a>

                <ul
                  class="dropdown-menu"
                  aria-labelledby="navbarDropdownMenuLink"
                >
                  <li>
                    <a class="dropdown-item active" href="/members">
                      All Members
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="/members/add">Add Member</a>
                  </li>
                </ul>
              </li>

              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  id="navbarDropdownMenuLink"
                  href="#"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  Users Management
                </a>

                <ul
                  class="dropdown-menu"
                  aria-labelledby="navbarDropdownMenuLink"
                >
                  <li>
                    <a class="dropdown-item" href="/users">Users</a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="/users/add">Add User</a>
                  </li>
                </ul>
              </li>

              <li class="nav-item">
                <a
                  class="nav-link"
                  href="/logout"
                  onclick="confirm(`Are you sure you want to log out?`)"
                  >Logout</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <div class="container-fluid">
        <div class="text-light col-md-3">Hi, <strong><%= name %></strong></div>
      </div>

      <div class="center">
        <h1>Movies - Subscriptions Web Site</h1>
      </div>
    </header>

    <main>
      <div class="container">
        <div class="row">
          <div class="container-fluid">
            <div class="row">
              <h2>Members:</h2>
            </div>
          </div>
        </div>

        <div class="row members">
          <% members.forEach(member => { %>
          <div class="member col-12 col-lg-6 col-xl-4 border">
            <div class="container-fluid">
              <div class="row mb-2 name"><%= member.name %></div>

              <div class="row mb-2 email">Email: <%= member.email %></div>

              <div class="row mb-2 city">City: <%= member.city %></div>

              <div class="row mb-2 btns">
                <span class="col">
                  <a class="btn btn-primary" href="members/<%=member._id%>">
                    Edit
                  </a>
                </span>

                <span class="col">
                  <a
                    class="btn btn-primary"
                    href=""
                    onclick="deleteThing('<%=member._id%>', 'member')"
                  >
                    Delete
                  </a>
                </span>
              </div>

              <div class="mb-1 subscriptions">
                <div class="row">Movie Watched:</div>

                <div class="center">
                  <button class="btn btn-secondary" style="font-size: smaller">
                    Subscribe to a New Movie
                  </button>
                </div>

                <div class="center">
                  <div
                    class="subscribe row border container-fluid"
                    style="font-size: smaller"
                  >
                    <div class="row">Subscribe to a New Movie</div>

                    <div class="row">
                      <select name="movie" id="movie"></select>
                    </div>
                    <div class="row">
                      <input type="date" name="watchDate" id="watchDate" />
                    </div>

                    <div class="row">
                      <button class="btn btn-primary">Subscribe</button>
                    </div>
                  </div>
                </div>

                <ul>
                  <% member?.subscriptions?.movies.forEach(movie => { %>
                  <li>
                    <a href="/movies?search=<%= movie.name %>"
                      ><%= movie.name %></a
                    >
                    , <%= new Date(movie.date).toJSON().slice(0,10) %>
                  </li>
                  <% }) %>
                </ul>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>
